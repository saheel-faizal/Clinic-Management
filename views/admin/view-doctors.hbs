<section style="margin-left: 18rem; margin-top:5rem;">
  <div class="container">
    <div class="row mt-4">
      <a class="btn btn-info ml-auto" href="/admin/add-doctor">Add Doctor</a>
    </div><br><br><br>
    <table class="table mt-5" id="doctorsTable">
      <thead>
        <tr>
          <th scope="col">No</th>
          <th scope="col">Name</th>
          <th scope="col">Specialised</th>
          <th scope="col">Field</th>
          <th>Image</th>
          <th>Customise</th>

        </tr>
      </thead>
      <tbody>

        {{#each doctors}}
        <tr>
          <th scope="row">1</th>
          <td>{{this.Name}}</td>
          <td>{{this.Specialised}}</td>
          <td>{{this.Field}}</td>
          <td><img style="width:50px;height:50px" src='/doctor-images/{{this._id}}.png' alt="" </td>
          <td>
            <a href="/admin/edit-doctor/{{this._id}}" class="btn btn-info">Edit</a>
            <a href="/admin/delete-doctor/{{this._id}}" class="btn btn-danger"
              onclick="return confirm('do you want to delete {{this.Name}}?')">Delete</a>
          </td>
        </tr>
        {{/each}}
